<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent" android:padding="3pt" android:layout_gravity="center_vertical" android:layout_height="55pt">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="3pt"
        
        android:src="@drawable/spotify_track" />

    <LinearLayout android:layout_height="fill_parent" android:layout_width="wrap_content" android:id="@+id/linearLayout3" android:layout_weight="1">
        <LinearLayout android:layout_height="fill_parent" android:orientation="vertical" android:layout_width="wrap_content" android:id="@+id/linearLayout1" android:layout_weight="1" android:gravity="center_vertical">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Large Text"
                android:textAppearance="?android:attr/textAppearanceMedium" />
			     
            
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_height="fill_parent" android:layout_width="wrap_content" android:id="@+id/linearLayout2" android:layout_gravity="center_vertical" android:focusable="false" android:gravity="center_vertical">

        <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="32dp"
                android:layout_height="wrap_content" android:visibility="gone"/>
        <TextView
	            android:id="@+id/tvPopularity"
	            android:layout_width="35dp"
	            android:layout_height="wrap_content"
	            android:text="2"
	            android:textSize="20dp"
	            android:typeface="normal" android:textStyle="bold" android:textAppearance="@style/spotify_essens"/>
	       
    </LinearLayout>








</LinearLayout>
